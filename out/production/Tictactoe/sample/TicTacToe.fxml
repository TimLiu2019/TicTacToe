<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.FXMLDocumentController">
    <center>
        <GridPane fx:id="gameBoard" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="b1" onAction="#buttonClickHandler1" prefHeight="120.0" prefWidth="120.0" />
                <Button fx:id="b2" onAction="#buttonClickHandler2" prefHeight="120.0" prefWidth="120.0" GridPane.columnIndex="1" />
                <Button fx:id="b3" onAction="#buttonClickHandler3" prefHeight="120.0" prefWidth="120.0" GridPane.columnIndex="2" />
                <Button fx:id="b4" onAction="#buttonClickHandler4" prefHeight="120.0" prefWidth="120.0" GridPane.rowIndex="1" />
                <Button fx:id="b5" onAction="#buttonClickHandler5" prefHeight="120.0" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="b6" onAction="#buttonClickHandler6" prefHeight="120.0" prefWidth="120.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Button fx:id="b7" onAction="#buttonClickHandler7" prefHeight="120.0" prefWidth="120.0" GridPane.rowIndex="2" />
                <Button fx:id="b8" onAction="#buttonClickHandler8" prefHeight="120.0" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="b9" onAction="#buttonClickHandler9" prefHeight="120.0" prefWidth="120.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>
   <bottom>
      <AnchorPane prefHeight="104.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="startBtn"  layoutX="7.0" layoutY="39.0" mnemonicParsing="false" onAction="#gameStartHandler" prefHeight="27.0" prefWidth="113.0" text="New Game" textAlignment="CENTER" textOverrun="CLIP">
               <font>
                  <Font name="Apple Braille" size="13.0" />
               </font></Button>
            <Label layoutX="150.0" layoutY="44.0" prefHeight="15.0" prefWidth="149.0" text="COMP 10183 Tic Tac Toe" />
         </children>
      </AnchorPane>
   </bottom>
